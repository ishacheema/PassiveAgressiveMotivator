{
    "manifest_version": 2,

    "name": "PassiveAgressiveMotivator",
    "description": "The best motivator in the world!",
    "version": "1.0",
    "author": "H.I",

    "chrome_url_overrides" : {
        "newtab": "background.html"
    },

    "browser_action": {
        "default_icon": "icon2.png"
    },
    "permissions": [
        "tabs"
    ],

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    } 
} 